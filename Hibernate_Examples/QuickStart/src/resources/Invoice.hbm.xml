<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.training">
  <class name="Invoice" table="Invoice" >
  <id column="invno" type="integer">
  <generator class="increment"></generator>
    </id>
    <property name="customerName" column="custname" type="string"></property>
    <property name="amount"  column="amount" type="double"></property>
  
  </class>
</hibernate-mapping>